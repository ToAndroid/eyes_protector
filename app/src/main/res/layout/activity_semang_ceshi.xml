<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip" >

        <Button
            android:id="@+id/button_semang_ceshi_back"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20.0dip"
            android:background="@drawable/btn_back" />

        <TextView
            android:id="@id/text_top_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="色盲测试"
            android:textColor="@color/text_top"
            android:textSize="20.0sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:background="@drawable/semangceshi" >

                <TextView
                    android:id="@+id/text_semang_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="5.0dip"
                    android:text=" 题目：1/10"
                    android:textColor="@color/white"
                    android:textSize="18.0sp" />

                <ProgressBar
                    android:id="@+id/progress_jindu"
                    style="?android:progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_toRightOf="@id/text_semang_count"
                    android:max="10"
                    android:progress="1"
                    android:progressDrawable="@drawable/progressbar" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/image_semang_ceshi_pic"
                android:layout_width="200dip"
                android:layout_height="200dip"
                android:layout_gravity="center"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/semangti1" />

            <EditText
                android:id="@+id/edittext_semang_answer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/edit"
                android:hint="请填写你所看到的数字"
                android:numeric="integer"
                android:padding="5.0dip" />

            <Button
                android:id="@+id/button_semang_ceshi_next"
                android:layout_width="wrap_content"
                android:layout_height="60dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30.0dip"
                android:background="@drawable/btn_button"
                android:text="继续下一个"
                android:textColor="@color/white"
                android:textSize="25.0sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>